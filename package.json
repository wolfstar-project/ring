{
	"name": "@wolfstar/ring",
	"version": "1.0.0",
	"description": "Private centralized management android for the WolfStar Network",
	"author": "WolfStar Project <contact@wolfstar.rocks>",
	"license": "Apache-2.0",
	"private": true,
	"main": "dist/main.mjs",
	"type": "module",
	"imports": {
		"#api/*": "./dist/api/*.mjs",
		"#lib/*": "./dist/lib/*.mjs"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "pnpm build --onSuccess \"pnpm start\"",
		"watch": "pnpm build --watch",
		"watch:start": "pnpm build --onSuccess \"pnpm start\"",
		"prisma:generate": "pnpm prisma generate",
		"clean": "node scripts/build/clean.mjs",
		"start": "node --enable-source-maps dist/main.mjs",
		"test": "eslint --ext ts src",
		"lint": "eslint --fix --ext ts src",
		"format": "prettier --write --log-level=warn \"src/**/*.{mjs,ts,json}\"",
		"prepare": "husky"
	},
	"dependencies": {
		"@discordjs/builders": "^1.13.1",
		"@discordjs/collection": "^2.1.1",
		"@prisma/client": "^6.19.2",

		"@sapphire/result": "^2.8.0",
		"@sapphire/utilities": "^3.18.2",
		"@skyra/env-utilities": "^2.0.1",
		"@skyra/http-framework": "^2.2.1",
		"@skyra/http-framework-i18n": "^1.2.1",
		"@skyra/logger": "^2.0.4",
		"@skyra/shared-http-pieces": "^1.2.3",
		"@skyra/start-banner": "^2.0.2",
		"discord-api-types": "^0.37.100",
		"fastify": "^5.7.4",
		"gradient-string": "^3.0.0",
		"husky": "^9.1.7",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@sapphire/eslint-config": "^5.0.6",
		"@sapphire/prettier-config": "^2.0.0",
		"@sapphire/ts-config": "^5.0.3",
		"@types/gradient-string": "^1.1.6",
		"@types/node": "^22.19.11",
		"@typescript-eslint/eslint-plugin": "^7.13.0",
		"@typescript-eslint/parser": "^7.13.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.5",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"prisma": "^6.19.2",
		"taze": "^19.9.2",
		"tsdown": "^0.20.3",
		"@rollup/plugin-alias": "^6.0.0",
		"typescript": "~5.4.5"
	},
	"pnpm": {
		"overrides": {
			"ansi-regex": "^5.0.1",
			"discord-api-types": "^0.37.100",
			"minimist": "^1.2.8"
		},
		"allowedDeprecatedVersions": {
			"eslint": "8.57.1"
		},
		"onlyBuiltDependencies": [
			"@prisma/client",
			"@prisma/engines",
			"prisma"
		]
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=10"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"*": "prettier --ignore-unknown --write",
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"prettier": "@sapphire/prettier-config",
	"eslintConfig": {
		"extends": "@sapphire",
		"rules": {
			"@typescript-eslint/no-base-to-string": "off"
		}
	},
	"packageManager": "pnpm@10.29.3",
	"volta": {
		"node": "22.22.0"
	}
}
